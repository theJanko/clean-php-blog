<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" description="width=device-width, initial-scale=1.0">
    <title>{% block title %}CRDG Admin{% endblock %}</title>
    <link rel="stylesheet" href="/css/main.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="logo-container">
        <img src="/images/logo.svg" alt="CRDG Logo" class="logo">
    </div>
    <div class="container">
        {% if app.session.get('success') %}
            <div class="message message-success">
                {{ app.session.get('success') }}
            </div>
        {% endif %}

        {% if app.session.get('error') %}
            <div class="message message-error">
                {{ app.session.get('error') }}
            </div>
        {% endif %}

        {% block description %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html> 